// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sector {
  id          String  @id @default(uuid())
  code        String  @unique
  description String?
  Alert       Alert[]

  @@map(name: "sectors")
}

model Alert {
  id         String   @id @default(uuid())
  sectorId   String
  sector     Sector   @relation(fields: [sectorId], references: [code])
  type       String
  event      String
  urgency    String
  severity   String
  certainty  String
  identifier String
  onset      DateTime
  expires    DateTime
  received   DateTime @default(now())

  @@map(name: "alerts")
}

model Chat {
  id                String   @id @default(uuid())
  telegramId        String
  title             String
  type              String
  code              String
  lastAlertCode     String
  lastAlertReceived DateTime
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map(name: "chats")
}
